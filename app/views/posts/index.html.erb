<% @posts.each do |post| %>
<div id=p<%= post.id %> class="card mb-2 pr-1">
  <div class="card-body d-flex">
    <div class="flex-column mr-auto">
      <div class="flex-row">
        <h5 class="text-break">
          <%= link_to  post.title, post, class: "font-weight-bold" %>
        </h5>
      </div>
      <div class="flex-row">
        <%= render 'badges', post: post %>
      </div>
    </div>
    <div class="flex-column">
      <%= render 'votes/submit', voteable: post, vote_value: post.vote_value%>
    </div>
  </div>
</div>
<% end %>
<%= will_paginate @things %>
