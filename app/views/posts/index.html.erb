<% 
  post_vote_partial = logged_in? ? 'post_vote_logged_in': 'post_vote'
  @posts.each do |post| 
%>
<div id=<%= post.id %> class="card mb-2">
  <div class="card-body d-flex">
    <div class="mr-auto">
      <div class="row">
        <div class="col">
          <%= link_to  post.title, post, class: "font-weight-bold" %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'badges', post: post %>
        </div>
      </div>
    </div>
    <div>
      <%= render post_vote_partial, post: post %>
    </div>
  </div>
</div>
<% end %>
<%= render 'paginator' %>
