<% @posts.each do |post| %>
<div id=p<%= post.id %> class="card mb-2">
  <div class="card-body d-flex">
    <div class="mr-auto">
      <div class="row">
        <div class="col">
          <%= link_to  post.title, post, class: "font-weight-bold" %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'badges', post: post %>
        </div>
      </div>
    </div>
    <div>
      <%= render 'votes/vote_submit', voteable: post, vote_value: post.vote_value %>
    </div>
  </div>
</div>
<% end %>
<%= will_paginate @things %>
