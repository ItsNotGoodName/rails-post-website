<% @posts.each do |post| %>
<div class="card mb-2 ">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <%= link_to  post.title, post, class: "font-weight-bold" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= render 'badges', post: post %>
      </div>
    </div>
  </div>
</div>
<% end %>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if @page[:prev?] %>
    <li class="page-item">
      <%= link_to  "First", posts_url(page: 0), class:"page-link" %>
    </li>
    <li class="page-item">
      <%= link_to  "Previous", posts_url(page: @page[:current]-1), class:"page-link" %>
    </li>
    <% end %>
    <li class="page-item active">
      <span class="page-link">
        <%= @page[:current] %>
        <span class="sr-only">(current)</span>
      </span>
    </li>
    <% if @page[:next?] %>
    <li class="page-item">
      <%= link_to  "Next", posts_url(page: @page[:current]+1), class:"page-link" %>
    </li>
    <li class="page-item">
      <%= link_to  "Last", posts_url(page: @page[:last]), class:"page-link" %>
    </li>
    <% end %>
  </ul>
</nav>