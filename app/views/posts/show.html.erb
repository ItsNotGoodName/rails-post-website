<div class="d-flex mb-2">
  <div class="flex-column mr-auto">
    <div class="flex-row">
      <h4 class="text-break">
        <%= @post.title %>
      </h4>
    </div>
    <div class="flex-row">
      <%= render 'badges', post: @post %>
    </div>
    <div>
    </div>
  </div>
  <%= render 'votes/vote_submit', voteable: @post, vote_value: @vote&.value %>
</div>
<p class="border p-3">
  <%= @post.body %>
<p>

<div>
  <%= render 'comments/comment_submit', commentable: @post %>
</div>

<div>
<% @comments.each do |comment| %>
  <div class="container border-top pt-3 pb-3 d-flex" id=c<%= comment.id %>>
    <div class="mr-auto">
      <h5 class="row">
        <%= link_to  comment.user.username, user_path(comment.user) %>
      </h5>
      <p class="row px-3"><%= comment.body %></p>
    </div>
    <div> 
      <%= render 'votes/vote_submit', voteable: comment, vote_value: comment.vote_value %>
    </div>
  </div>
<% end %>
<%= will_paginate @comments %>
</div>
